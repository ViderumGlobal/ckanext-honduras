          "label": "Cultura y Ocio"
        },
        {
          "value": "demografia",
          "label": "Demografía"
        },
        {
          "value": "deporte",
          "label": "Deporte"
        },
        {
          "value": "economia",
          "label": "Economía"
        },
        {
          "value": "educacion",
          "label": "Educación"
        },
        {
          "value": "empleo",
          "label": "Empleo"
        },
        {
          "value": "energia",
          "label": "Energía"
        },
        {
          "value": "hacienda",
          "label": "Hacienda"
        },
        {
          "value": "industria",
          "label": "Industria"
        },
        {
          "value": "legislacion-y-justicia",
          "label": "Legislación y Justicia"
        },
        {
          "value": "medio-ambiente",
          "label": "Medio Ambiente"
        },
        {
          "value": "medio-rural",
          "label": "Medio Rural"
        },
        {
          "value": "salud",
          "label": "Salud"
        },
        {
          "value": "sector-publico",
          "label": "Sector Público"
        },
        {
          "value": "seguridad",
          "label": "Seguridad"
        },
        {
          "value": "sociedad-y-bienestar",
          "label": "Sociedad y Bienestar"
        },
        {
          "value": "transporte",
          "label": "Transporte"
        },
        {
          "value": "turismo",
          "label": "Turismo"
        },
        {
          "value": "urbanismo-e-infraestructuras",
          "label": "Urbanismo e Infraestructuras"
        },
        {
          "value": "vivienda",
          "label": "Vivienda"
        }
    ]
    },
    {
      "field_name": "tag_string",
      "label": "Palabras clave",
      "preset": "tag_string_autocomplete",
      "required": true
    },
    {
      "field_name": "issued",
      "preset": "date",
      "label": "Fecha de Creación del Dataset"
    },
    {
      "field_name": "modified",
      "preset": "date",
      "label": "Fecha de última actualización del Dataset",
      "required": true
    },
    {
      "field_name": "frequency",
      "label": "Frecuencia de actualización del Dataset",
      "required": true,
      "preset": "select",
      "choices": [
        {
          "value": "R/PT1S",
          "label": "En tiempo real"
        },
        {
          "value": "R/PT1H",
          "label": "Horaria"
        },
        {
          "value": "R/P1D",
          "label": "Diaria"
        },
        {
          "value": "R/P1W",
