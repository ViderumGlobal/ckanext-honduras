{
  "scheming_version": 1,
  "dataset_type": "dataset",
  "about": "Honduras CKAN dataset schema",
  "about_url": "http://github.com/datopian/ckanext-honduras",
  "dataset_fields": [
    {
      "field_name": "title",
      "label": "Nombre del Dataset",
      "required": true,
      "preset": "title"
    },
    {
      "field_name": "name",
      "label": "URL",
      "preset": "dataset_slug",
      "form_placeholder": "eg. my-dataset"
	},
    {
      "field_name": "notes",
      "label": "Descripción del dataset",
      "form_snippet": "markdown.html",
      "required": true
    },
    {
      "field_name": "identifier",
      "label": "Identificador del Dataset",
      "required": true
    },
    {
      "field_name": "owner_org",
      "label": "Publicador",
      "preset": "dataset_organization"
	},
    {
      "field_name": "theme",
      "label": "Temática del dataset",
      "required": true,
      "preset": "select",
      "choices": [
        {
          "value": "ciencia-y-tecnologia",
          "label": "Ciencia y Tecnología"
        },
        {
          "value": "comercio",
          "label": "Comercio"
        },
        {
