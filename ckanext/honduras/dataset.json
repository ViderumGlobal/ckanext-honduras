{
  "scheming_version": 1,
  "dataset_type": "dataset",
  "about": "Honduras CKAN dataset schema",
  "about_url": "http://github.com/datopian/ckanext-honduras",
  "dataset_fields": [
    {
      "field_name": "title",
      "label": "Nombre",
      "required": true,
      "preset": "title"
    },
    {
      "field_name": "name",
      "label": "URL",
      "preset": "dataset_slug",
      "form_placeholder": "eg. my-dataset"
	},
    {
      "field_name": "notes",
      "label": "Descripción",
      "form_snippet": "markdown.html",
      "required": true
    },
    {
      "field_name": "identifier",
      "label": "Identificador",
      "output_validators": "build_uri",
      "display_snippet": "text_with_links.html",
      "required": true
    },
    {
      "field_name": "owner_org",
      "label": "Publicador",
      "preset": "dataset_organization"
	},
    {
      "field_name": "tag_string",
      "label": "Palabras clave",
      "preset": "tag_string_autocomplete",
      "required": true
    },
    {
      "field_name": "issued",
      "preset": "date",
      "label": "Fecha de Creación",
      "display_snippet": "date_formatted.html"
    },
    {
      "field_name": "modified",
      "preset": "date",
      "label": "Fecha de última actualización",
      "required": true,
      "display_snippet": "date_formatted.html"
    },
    {
      "field_name": "frequency",
      "label": "Frecuencia de actualización",
      "required": true,
      "preset": "select",
      "choices": [
        {
          "value": "R/PT1S",
          "label": "En tiempo real"
        },
        {
          "value": "R/PT1H",
          "label": "Horaria"
        },
        {
          "value": "R/P1D",
          "label": "Diaria"
        },
        {
          "value": "R/P1W",
          "label": "Semanal"
        },
         {
          "value": "R/P2W",
          "label": "Quincenal"
        },
        {
          "value": "R/P1M",
          "label": "Mensual"
        },
        {
          "value": "R/P2M",
          "label": "Bimensual"
        },
        {
          "value": "R/P3M",
          "label": "Trimestral"
        },
        {
          "value": "R/P1Y",
          "label": "Anual"
        },
        {
          "value": "on-demand",
          "label": "Bajo demanda"
        }
      ]
    },
    {
      "field_name": "temporal",
      "label": "Cobertura Temporal"
    },
    {
      "field_name": "spatial",
      "label": "Cobertura Geográfica",
      "display_snippet": "link.html"
    },
    {
      "field_name": "describedBy",
      "label": "Información relacionada",
      "display_snippet": "text_with_links.html"
    },
    {
      "field_name": "references",
      "label": "Normativa relacionada",
      "display_snippet": "text_with_links.html"
    },
    {
      "field_name": "license_id",
      "label": "Condiciones de uso",
      "form_snippet": "license.html",
      "required": true
    },
    {
      "field_name": "contactPoint",
      "label": "Punto de Contacto",
      "display_snippet": "email.html",
      "required": true
    }
  ],
  "resource_fields": [
    {
      "field_name": "url",
      "label": "URL",
      "preset": "resource_url_upload"
    },
    {
      "field_name": "access_url",
      "label": "Access URL",
      "form_snippet": null,
      "display_snippet": null,
      "validators": "ignore_missing"
    },
    {
      "field_name": "download_url",
      "label": "Download URL",
      "form_snippet": null,
      "display_snippet": null,
      "validators": "ignore_missing"
    },
    {
      "field_name": "name",
      "label": "Nombre",
      "required": true
    },
    {
      "field_name": "description",
      "label": "Descripción",
      "form_snippet": "markdown.html",
      "required": true
    },
    {
      "field_name": "format",
      "label": "Formato",
      "preset": "resource_format_autocomplete"
    },
    {
      "field_name": "size",
      "label": "Tamaño (bytes)"
    },
    {
      "field_name": "describedBy",
      "label": "Diccionario de datos",
      "display_snippet": "text_with_links.html"
    }
  ]
}
